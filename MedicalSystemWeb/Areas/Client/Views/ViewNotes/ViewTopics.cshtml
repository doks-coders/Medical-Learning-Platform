@model List<Topic>

@{
	if (Model.Count() > 0)
	{
		<table class="styled-table">
			<thead>
				<tr>
				<th>Week</th>
					<th>
						Topic
					</th>
					<th>
						Course
					</th>
					<th>
						Lecture Date
					</th>
					<th>

					</th>
				</tr>

			</thead>

			<tbody>

				@{
					for (int i=0;i<Model.Count();i++)
					{
						<tr>
						<td>@(i+1)</td>
							<td>
								@Model[i].Title
							</td>
							<td>
								@Model[i].Course.Name
							</td>


							<td>
								@Model[i].LectureDate.ToShortDateString()
							</td>

							<td>
								<a href="/client/viewnotes/topicpage?id=@Model[i].Id" class="btn btn-primary mx-2">
									<i class="bi bi-eye"> </i>
									View Materials
								</a>
							</td>
						</tr>
					}
				}

			</tbody>
		</table>

	}
	else
	{
		<div class="center-div" style="height:400px">
		<div>
		No Topics Have been set
		</div>
		</div>
	}
}


