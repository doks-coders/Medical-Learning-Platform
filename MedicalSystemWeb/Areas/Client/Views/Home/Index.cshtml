@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<div class="position-relative">

		<div class="position-absolute background-image banner-absolute-position" style="width:100%;">
		</div>
		<div class="position-absolute banner-absolute-position" style="opacity:0.4; background-color:white;width:100%;">
		</div>

		<div class="position-relative banner-absolute-position" style="width:100%;">
			<div class="banner d-flex justify-content-center align-items-center">
				<div>
					<h6 class="text-lg-center">Welcome to our Website</h6>
					<h2 class="text-center text-lg-center mt-2">CMDA Website</h2>
				</div>
			</div>
		</div>
	</div>

</div>
<h3 class="text-center my-4">
	Features
</h3>
<div style="width:100%" class="d-flex flex-column flex-md-row ">
	@{
		List<Dictionary<string, string>> items = new()
	{
	new Dictionary<string, string>()

	{
	{"imageUrl","/images/web-images/course.jpg"},
	{"Name","Notes"},
	{"Controller","ViewNotes"},
	{"Action","Index"}
	},
	new Dictionary<string, string>()

	{
	{"imageUrl","/images/web-images/exam.jpg"},
	{"Name","Past Questions"},
	{"Controller","PastQuestion"},
	{"Action","Index"}
	},
	new Dictionary<string, string>()

	{
	{"imageUrl","/images/web-images/blog.jpg"},
	{"Name","Blogs"},
	{"Controller","ViewNotes"},
	{"Action","Index"}
	}

	};

		foreach (var item in items)
		{
			
				<a asp-area="Client" asp-controller="@item["Controller"]" asp-action="Index" class="position-relative p-2 align-item-center" style="flex-direction:column;width:100%;">
					<img style="border-radius:10px;width:100%;height:150px;object-fit:cover" src="@item["imageUrl"]" />

					<div class="position-absolute d-flex center-div" style="width:100%;height:100%;top:0">
						<div class="px-3 py-2" style="background-color:gray;border-radius:10px">
							<span class="text-center text-white">@item["Name"]</span>
						</div>
					</div>
				</a>
		
			

		}
	}

</div>
