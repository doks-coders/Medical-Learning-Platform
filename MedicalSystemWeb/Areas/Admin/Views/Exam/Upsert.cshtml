@model Exam
@{
	ViewData["Title"] = "Create";
}

<form method="post" enctype="multipart/form-data">
	<input asp-for="Id" hidden />

	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">@(Model.Id != 0 ? "Edit" : "Upload") Past Questions</h2>
			<hr />
		</div>

		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="CourseName"></label>
			<input asp-for="CourseName" class="form-control" />
			<span asp-validation-for="CourseName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ExamName"></label>
			<input asp-for="ExamName" class="form-control" />
			<span asp-validation-for="ExamName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Year"></label>
			<input asp-for="Year" class="form-control" />
			<span asp-validation-for="Year" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="ExamFiles"></label>
			<input type="file" name="files" multiple asp-for="ExamFiles" class="form-control" />
		</div>

		@{
			if (Model.ExamFiles != null)
			{
				foreach (ExamFile examFile in Model.ExamFiles)
				{
					<p>
						@examFile.FileUrl
					</p>
				}
			}
		}

		@{
			if (Model.Id != 0)
			{
				<button type="submit" class="btn btn-primary">Edit </button>
			}
			else
			{
				<button type="submit" class="btn btn-primary">Create </button>
			}
		}
		<a asp-action="Index" asp-area="Admin" asp-controller="Exam" class="btn btn-secondary">Go to Home</a>
	</div>
</form>

